%Body
  .header
    %h3.title
      %a{:href => "/"} finest_coffee
    = form_with(url: search_blogs_path, local: true, method: :get, class: "search-form") do |form|
      = form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input"
      = form.submit "検索", class: "search-btn"
    .menu
      - if user_signed_in?
        .menulist
          = link_to "ブログを投稿する", new_blog_path, class: "post"
          = link_to "マイページ", user_path, class: "post"
          = link_to "ログアウト", destroy_user_session_path, class: "logout", method: :delete
      - else
        .loginlist
          = link_to "ログイン", new_user_session_path, class: "login"
          = link_to "新規登録", new_user_registration_path, class: "register"
  .container
    .container__row
      .container__box
        %h2 
          新規投稿
        = form_with model: @blog, class: "blog-box", id: "blog-form", local: "true" do |f|
          .form-group
            %label ブログ名
            %br/
            = f.text_field :title, class: 'form-control'
          .form-group
            %label 記事内容
            %br/
            = f.text_area :body, class: 'form-control__area'
          .form-group
            = f.label :image, "写真", class: "label"
            %br/
            %i.fa.fa-image
            = f.file_field :image, class: "form-control__image"
          %div
            = f.submit class: 'btn btn-success'
