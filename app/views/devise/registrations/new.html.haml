= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .single-form
    .single-form__box
      %h2 新規会員登録
      .field
        = f.label :"お名前(全角)"
        %span.field__require 必須
        %br/
        = f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "(例) ブログ太郎", class: "labelBox"
      .field
        = f.label :email
        %span.field__require 必須
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "labelBox"
      .field
        = f.label :password
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} characters minimum)
          %span.field__require 必須  
        %br/
        = f.password_field :password, autocomplete: "new-password", placeholder: "パスワード", class: "labelBox"
      .field
        = f.label :password_confirmation
        %br/
        = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード確認", class: "labelBox"
        %p.form-group__info ※ 英字と数字の両方を含めて設定してください
      .actions
        = f.submit "Sign up", class: "submit-btn"
      = render "devise/shared/links"


